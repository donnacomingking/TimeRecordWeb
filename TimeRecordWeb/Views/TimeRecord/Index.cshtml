@model List<TimeRecordModel>
@{
    ViewData["Title"] = "Time Record";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<link href="~/lib/dataTables/datatables.min.css" rel="stylesheet" />
<script type="text/javascript" src="~/lib/dataTables/datatables.min.js"></script>
<div>
    <h1 class="mb-5 mt-3 text-black-50 tr-title" style="display: inline-block;">Employee Time Record</h1>
    <a class="mt-4 text-info tr-float-right" href="/Home/Logout">Logout</a>
</div>
<div class="tr-main p-3">
    <p>
        <a asp-action="Create" class="btn btn-info">Add New</a>
    </p>
    <table id="timerecord" class="table table-hover table-striped table-bordered table-sm nowrap">
        <thead>
            <tr>
                <th>ID</th>
                <th>Employee Name</th>
                <th>Clock In</th>
                <th>Clock Out</th>
                <th>Active</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.ClockIn</td>
                    <td>@item.ClockOut</td>
                    <td>@item.Active</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="~/js/timerecord.js" asp-append-version="true"></script>