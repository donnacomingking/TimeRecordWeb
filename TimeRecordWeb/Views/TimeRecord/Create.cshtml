@model TimeRecordModel
@{ ViewData["Title"] = "Add New"; }

<h4 class="mt-3 text-black-50 tr-header">Add New Time Record</h4>
<a class="mt-4 text-info tr-float-right" asp-action="Index">Back to List</a>
<hr />
<div class="col-sm-6 offset-3 p-3 row tr-box">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" placeholder="User ID" autocomplete="off" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label"></label>
                <input asp-for="EmployeeName" class="form-control" placeholder="Employee Name" autocomplete="off" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockIn" class="control-label"></label>
                <input asp-for="ClockIn" class="form-control" />
                <span asp-validation-for="ClockIn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClockOut" class="control-label"></label>
                <input asp-for="ClockOut" class="form-control" />
                <span asp-validation-for="ClockOut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Active" class="control-label"></label>
                <input asp-for="Active" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary col-sm-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
