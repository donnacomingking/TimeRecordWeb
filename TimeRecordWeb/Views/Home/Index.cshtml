@model User
@{
    ViewData["Title"] = "Welcome";
}

<div class="login-box">
    @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "col-sm-8 login-form" }))
    {
        <div class="invalid-login text-danger">@Html.ValidationSummary(true)</div>
        <div class="form-group text-center mb-5 text-black-50">
            <h2>Welcome to Time Tracker!</h2>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.UserName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input type="text" asp-for="UserName" class="form-control" placeholder="Username" value="TestUser">
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Password, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password" value="Smoothies100!">
            </div>
        </div>

        <button type="submit" class="btn btn-primary mt-3 col-sm-12">Login</button>
    }
</div>